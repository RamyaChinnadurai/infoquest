import java.util.*;
public class ReverseNumber {
	public static void main(String[] args) {
		int num,rev = 0;
		System.out.println("Enter a number");
		Scanner input = new Scanner(System.in);
		num = input.nextInt();
		while(num!=0){
			rev = rev *10;
			rev = rev + num %10;
			num = num / 10;
		}
     System.out.println("The reverse of the number is "+ rev);
	}
}
